<%- include('../../shared/includes/head', { pageTitle: 'Signin' }) %>
    <link rel="stylesheet" href="/styles/forms.css">
    <link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
    <%- include('../../shared/includes/header') %>
    <main>
        <div class="form-div">
            <% if (inputData.errorMessage) {%>
                <section class="alert">
                    <h2>Something's Wrong</h2>
                    <p><%= inputData.errorMessage %></p>
                </section>
            <% } %>
            <h1>SIGN IN TO YOUR ACCOUNT</h1>
            <form action="/signin" method="POST">
                <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
                <div>
                    <label for="email">E-mail Address</label>
                    <input type="email" id="email" name="email" value="<%= inputData.email %>" required>
                </div>
                <div>
                    <label for="password">Password</label>
                    <input type="password" id="password" minlength="6" name="password" value="<%= inputData.password %>" required>
                </div>
                <div id="forgot-password">
                    <a href="">
                        Forgot password
                    </a>
                </div>
                <div>
                    <button class="btn btn-dark">
                        Sign In
                    </button>
                </div>
                <p>Donâ€™t have an account ?  <a href="/signup">Sign Up</a></p>
            </form>
        </div>
    </main>
<%- include('../../shared/includes/footer') %>