<%- include('../../shared/includes/head', { pageTitle: 'T-shirts' }) %>
<link rel="stylesheet" href="/styles/products.css">
<link rel="stylesheet" href="/styles/base.css">
<link rel="stylesheet" href="/styles/customer-products.css">
<script src="/javascript/favorites-management.js" defer></script>
</head>
<body>
    <%- include('../../shared/includes/header') %>
    <main class="product-page-layout">
        <div class="category-subheader">
            <a id="underlined" href="/t-shirts">T-shirts</a>
            <a href="/sweatshirts">Sweatshirts</a>
            <a href="/pants">Pants</a>
            <a href="/bags">Bags</a>
        </div>
        <div class="products-area">
            <ul class="product-grid">
                <% for (const product of products) { %>
                    <% if (product.category === 't-shirts') { %> <!-- Ensure this matches the database -->
                        <li>
                            <%- include('../../shared/includes/product-item', { product: product, user: user }) %>
                        </li>
                    <% } %>
                <% } %>
            </ul>
        </div>
    </main>
<%- include('../../shared/includes/footer') %>