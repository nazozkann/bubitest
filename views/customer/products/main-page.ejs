<%- include('../../shared/includes/head', { pageTitle: 'Bubi Wear' }) %>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="styles/main-page.css">
<script src="javascript/main-page.js" defer></script>
</head>
<body>
    <%- include('../../shared/includes/header') %>
    <main>
        <div class="bubi-text">
            <h1>
                Style Crafted <br> 
                Just For You
            </h1>
        </div>
        <div class="slide-shows">
            <div id="img-s-1" class="slide-show slide-show-1">
                <div id="sd-1" class="scroll-down">
                    <img src="/images/scroll-down.png" alt="">
                </div>
                <div class="slide-wrapper">
                  <img src="/images/main-slide-1-1.png" alt="Slide 1-1">
                  <img src="/images/main-slide-1-2.png" alt="Slide 1-2">
                  <img src="/images/main-slide-1-3.png" alt="Slide 1-3">
                  <img src="/images/main-slide-1-4.png" alt="Slide 1-4">
                </div>
              </div>
              <div class="slide-show slide-show-2">
                <div id="sd-2" class="scroll-down">
                    <img src="/images/scroll-down.png" alt="">
                </div>
                <div class="slide-wrapper">
                  <img src="/images/main-slide-2-1.png" alt="Slide 2-1">
                  <img src="/images/main-slide-2-2.png" alt="Slide 2-2">
                  <img src="/images/main-slide-2-3.png" alt="Slide 2-3">
                  <img src="/images/main-slide-2-4.png" alt="Slide 2-4">
                </div>
              </div>
              <div class="slide-show slide-show-3">
                <div id="sd-3" class="scroll-down">
                    <img src="/images/scroll-down.png" alt="">
                </div>
                <div class="slide-wrapper">
                  <img src="/images/main-slide-3-1.png" alt="Slide 3-1">
                  <img src="/images/main-slide-3-2.png" alt="Slide 3-2">
                  <img src="/images/main-slide-3-3.png" alt="Slide 3-3">
                  <img src="/images/main-slide-3-4.png" alt="Slide 3-4">
                </div>
              </div>
              <div class="slide-show slide-show-4">
                <div class="slide-wrapper">
                  <img src="/images/main-slide-4-1.png" alt="Slide 4-1">
                  <img src="/images/main-slide-4-2.png" alt="Slide 4-2">
                  <img src="/images/main-slide-4-3.png" alt="Slide 4-3">
                  <img src="/images/main-slide-4-4.png" alt="Slide 4-4">
                </div>
              </div>
        </div>
    </main>

    <%- include('../../shared/includes/footer') %>

    <div id="loading-screen">
      <p>BubiWear</p>
      <div class="spinner"></div>
    </div>
    <style>
      #loading-screen {
        display:flex;
        flex-direction: column;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: white;
        z-index: 9999;
        display: flex;
        justify-content: center;
        align-items: center;
      }
      #loading-screen p {
        font-size: 48px;
        color: #F29D38;
        margin: 60px 0;
      }

      .spinner {
        border: 16px solid #f3f3f3;
        border-top: 16px solid #F29D38;
        border-radius: 50%;
        width: 120px;
        height: 120px;
        animation: spin 1s linear infinite;
      }

      @keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
      }
    </style>
    <script>
  window.addEventListener("load", function () {

      const loading = document.getElementById("loading-screen");
      if (loading) loading.style.display = "none";

  });
</script>
</body>